FROM ubuntu:24.04

WORKDIR /benchmarks

# Copy all benchmark files into the container
COPY c /benchmarks/

# When the container runs, copy them to the shared volume
# and create a sentinel file to signal completion
CMD ["bash", "-c", "\
    mkdir -p /shared/benchmarks && \
    cp -r /benchmarks/* /shared/benchmarks && \
    touch /shared/benchmarks/.complete \
"]
